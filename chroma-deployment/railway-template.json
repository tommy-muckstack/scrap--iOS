{
  "name": "Spark Chroma Vector Database",
  "description": "Self-hosted Chroma vector database for Spark note-taking app with AI semantic search",
  "repository": "local",
  "services": [
    {
      "name": "chroma-db",
      "source": {
        "type": "dockerfile",
        "dockerfile": "Dockerfile"
      },
      "variables": {
        "CHROMA_HOST": "0.0.0.0",
        "CHROMA_PORT": "8000",
        "IS_PERSISTENT": "TRUE",
        "ANONYMIZED_TELEMETRY": "FALSE"
      },
      "domains": [
        {
          "name": "${{RAILWAY_STATIC_URL}}"
        }
      ],
      "healthcheck": {
        "path": "/api/v1/heartbeat",
        "port": 8000
      }
    }
  ]
}